@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Knowledge System</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @RenderSection("header", required: false)

    <style>
        .result {
            float: left;
            margin: -18px 0 0 110px;
        }
    </style>


    @*<script type="text/javascript" src="~/Scripts/rating.js"></script>*@
    @*<link rel="stylesheet" href="~/Content/rating.css" type="text/css" media="screen" title="Rating CSS">*@

    @*<script type="text/javascript">
        $(function() {
            $('.ratting-item').rating();
        });
    </script>*@

</head>
<body>
@*<script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"></script>*@

@RenderSection("scripts", required: false)
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Knowledge System", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </div>
</div>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Knowledge System</p>
    </footer>
</div>




<div class="footer">
    <div class="container">
        <div class="col-md-6 footer-left">
            <h3>Information</h3>
            <p class="para">
                If you have any troubles with application functionality, please contact administrator, and we try to do all possible for solving your problems.
            </p>
        </div>
        <div class="col-md-6 footer-right">
            <h3>Contact Us</h3>
            <ul class="con-icons">
                <li><span class="glyphicon glyphicon-phone" aria-hidden="true"></span>+123 456 7890</li>
                <li><a href="mailto:info@example.com"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>info@example.com</a></li>
            </ul>
        </div>
    </div>
</div>

<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>