@if (!User.Identity.IsAuthenticated)
{
    <li><a href="@Url.Action("Register", "Account")"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
    <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
}
else
{
    <li>
        @Html.ActionLink("Hello, " + User.Identity.Name + "!", "Index", "Profile", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li><a href="@Url.Action("LogOff", "Account")"><span class="glyphicon glyphicon-log-off"></span>Log off</a></li>
}